<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/map_background">

    <Button
        android:id="@+id/game1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/game1" />

    <Button
        android:id="@+id/game2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/game1_button"
        android:layout_below="@+id/game1_button"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/game2"
        tools:layout_width="wrap_content" />

    <Button
        android:id="@+id/game3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/game2_button"
        android:layout_below="@+id/game2_button"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/game3"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/game3_button"
        android:layout_marginStart="90dp"
        android:background="@drawable/quit" />
</RelativeLayout>