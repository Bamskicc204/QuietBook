<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"> //View Game_Menu

    <Button
        android:id="@+id/game1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="29dp"
        android:text="Game 1" />

    <Button
        android:id="@+id/game2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game1_button"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/game1_button"
        android:text="Game 2" />

    <Button
        android:id="@+id/game3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/game2_button"
        android:layout_below="@+id/game2_button"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="28dp"
        android:text="Game 3" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/game3_button"
        android:layout_marginStart="78dp"
        android:layout_marginTop="41dp"
        android:text="Back" />
</RelativeLayout>