<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game2_background"
    android:orientation="horizontal"
    tools:context="com.ceui.quietbook.Game2"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cloth01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth01" />

        <ImageView
            android:id="@+id/cloth02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cloth01"
            android:layout_toEndOf="@+id/cloth04"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth02" />

        <ImageView
            android:id="@+id/cloth03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cloth09"
            android:layout_alignTop="@+id/cloth02"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth03" />

        <ImageView
            android:id="@+id/cloth04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cloth01"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth04" />

        <ImageView
            android:id="@+id/cloth05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cloth08"
            android:layout_alignTop="@+id/cloth04"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth05" />

        <ImageView
            android:id="@+id/cloth06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cloth09"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth06" />

        <ImageView
            android:id="@+id/cloth07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cloth04"
            android:layout_alignTop="@+id/cloth08"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth07" />

        <ImageView
            android:id="@+id/cloth08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cloth09"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth08" />

        <ImageView
            android:id="@+id/cloth09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/cloth09" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="88.5dp"
            android:columnCount="3"
            android:rowCount="3"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/place01_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@drawable/place201"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place02_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/place202"
                android:gravity="center"
                android:layout_marginStart="3.5dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place03_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@drawable/place203"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place04_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/place204"
                android:gravity="center"
                android:layout_marginTop="3.8dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place05_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/place205"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3.5dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place06_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@drawable/place206"
                android:gravity="center"
                android:layout_marginTop="3.5dp"
                android:layout_marginStart="3.7dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place07_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/place207"
                android:gravity="center"
                android:layout_marginTop="3.5dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place08_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@drawable/place208"
                android:gravity="center"
                android:layout_marginTop="3.2dp"
                android:layout_marginStart="3.5dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/place09_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/place209"
                android:gravity="center"
                android:layout_marginTop="3.5dp"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>