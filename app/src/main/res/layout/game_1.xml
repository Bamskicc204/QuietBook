<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context="com.ceui.quietbook.Game1"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shape01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape01"/>

        <ImageView
            android:id="@+id/shape02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shape01"
            android:layout_toEndOf="@+id/shape04"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape02" />

        <ImageView
            android:id="@+id/shape03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/shape09"
            android:layout_alignTop="@+id/shape02"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape03" />

        <ImageView
            android:id="@+id/shape04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shape01"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape04" />

        <ImageView
            android:id="@+id/shape05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/shape08"
            android:layout_alignTop="@+id/shape04"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape05" />

        <ImageView
            android:id="@+id/shape06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shape09"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape06" />

        <ImageView
            android:id="@+id/shape07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shape04"
            android:layout_alignTop="@+id/shape08"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape07" />

        <ImageView
            android:id="@+id/shape08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shape09"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape08" />

        <ImageView
            android:id="@+id/shape09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape09" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="18dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/place01_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place01"
                android:layout_column="0"
                android:layout_row="0"
                android:orientation="horizontal"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place02_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place02"
                android:layout_column="1"
                android:layout_row="0"
                android:orientation="horizontal"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place03_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place03"
                android:layout_column="2"
                android:layout_row="0"
                android:orientation="horizontal"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place04_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place04"
                android:layout_column="0"
                android:layout_row="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place05_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place05"
                android:layout_column="1"
                android:layout_row="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place06_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place06"
                android:layout_column="2"
                android:layout_row="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place07_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place07"
                android:layout_column="0"
                android:layout_row="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place08_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place08"
                android:layout_column="1"
                android:layout_row="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place09_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/place09"
                android:layout_column="2"
                android:layout_row="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>

