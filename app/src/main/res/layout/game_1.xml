<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.ceui.quietbook.Game1">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shape01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape01" />

        <ImageView
            android:id="@+id/shape02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape02" />

        <ImageView
            android:id="@+id/shape03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape03" />

        <ImageView
            android:id="@+id/shape04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape04" />

        <ImageView
            android:id="@+id/shape05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape05" />

        <ImageView
            android:id="@+id/shape06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape06" />

        <ImageView
            android:id="@+id/shape07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape07" />

        <ImageView
            android:id="@+id/shape08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="180dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape08" />

        <ImageView
            android:id="@+id/shape09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="180dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape09" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_purple"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/place01_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/place01"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/place02_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/place02"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place03_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:background="@drawable/place03"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place04_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_row="1"
                android:background="@drawable/place04"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place05_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_row="1"
                android:background="@drawable/place05"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place06_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_row="1"
                android:background="@drawable/place06"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place07_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:layout_row="2"
                android:background="@drawable/place07"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place08_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="15dp"
                android:layout_row="2"
                android:background="@drawable/place08"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/place09_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="15dp"
                android:layout_row="2"
                android:background="@drawable/place09"
                android:gravity="center"
                android:orientation="horizontal" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>

